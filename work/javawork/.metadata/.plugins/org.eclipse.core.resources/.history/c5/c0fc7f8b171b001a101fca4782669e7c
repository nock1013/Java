		students[0].setName("Lee");
		students[0].setKorean(60);
		students[0].setEnglish(70);
		students[0].setMath(99);
		students[0].setScience(98);
		
		students[0].setName("Park");
		students[0].setKorean(68);
		students[0].setEnglish(86);
		students[0].setMath(60);
		students[0].setScience(40);
		
		for(int i = 0; i < students.length; i++) {
			System.out.println(students[i].getName() + " Æò±Õ: " + students[i].getAvg() + " ÇÐÁ¡: " + students[i].getGrade());
		}

