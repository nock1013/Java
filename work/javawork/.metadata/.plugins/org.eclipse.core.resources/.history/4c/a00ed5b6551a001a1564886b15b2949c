package chap05;

public class ArrayExam04 {

	public static void main(String[] args) {
		int[][] arr2 = {
				{5, 5},
				{10, 10, 10, 10, 10},
				{20, 20, 20},
				{30, 30, 30, 30}
		};
		
		for(int i = 0; i < arr2.length; i++)
		{
			for(int j = 0; j < arr2[i].length; j++)
			{
				System.out.print(arr2[i][j] + "\t");
			}
			System.out.println();
		}
		
		int sum = 0;
		float avg = 0;
		for(int i = 0; i < arr2.length; i++)
		{
			for(int j = 0; j < arr2[i].length; j++)
			{
				sum += arr2[i][j];
			}
		}

	}

}
